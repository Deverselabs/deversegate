// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Merchant/Business owner accounts
model User {
  id        String    @id @default(cuid())
  clerkId   String    @unique // From Clerk auth
  email     String?
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  invoices Invoice[]

  @@map("users")
}

// Invoices created by merchants for their clients
model Invoice {
  id            String    @id @default(cuid())
  userId        String // Foreign key to User (the merchant)
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoiceNumber String    @unique // Globally unique

  // Client info (not authenticated users)
  clientName   String
  clientEmail  String
  clientWallet String?

  // Invoice details
  amount      String
  currency    String    @default("ETH")
  description String?
  dueDate     DateTime
  status      String    @default("UNPAID")

  // Payment info
  paymentPageUrl String?
  merchantWallet  String?
  paymentTxHash   String?
  paidAt          DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([invoiceNumber])
  @@map("invoices")
}
