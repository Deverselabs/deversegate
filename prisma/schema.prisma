generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  clerkId   String    @unique
  email     String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  invoices  Invoice[]

  @@map("users")
}

model Invoice {
  id              String    @id @default(uuid())
  invoiceNumber   String    @unique
  amount          Decimal
  currency        String
  status          String
  description     String
  dueDate         DateTime
  
  // Payment tracking fields
  paymentAddress  String?   // Wallet address to monitor
  paymentTxHash   String?   @unique // Transaction hash when paid
  paidAt          DateTime? // Timestamp when paid
  
  clientName      String
  clientEmail     String
  clientWallet    String?
  
  // User relation
  userId          String
  user            User      @relation(fields: [userId], references: [id])
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  template        String    @default("basic")

  @@index([userId])
  @@index([status])
  @@index([paymentAddress])
}
